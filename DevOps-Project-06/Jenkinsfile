pipeline {
    agent { label 'agent1' }

    environment {
        IMAGE_NAME = "devops6-app"
        CONTAINER_NAME = "devops6-app"
        ARTIFACTORY_SERVER = "jfrog-server"
        DOCKER_REPO = "docker-local"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & SonarQube Analysis') {
            steps {
                dir('DevOps-Project-06') {
                    withSonarQubeEnv('SonarQube') {
                        withCredentials([string(credentialsId: 'SONAR_AUTH_TOKEN', variable: 'SONAR_TOKEN')]) {
                            sh """
                                mvn clean package -DskipTests sonar:sonar \
                                -Dsonar.projectKey=devops6-app \
                                -Dsonar.login=$SONAR_TOKEN
                            """
                        }
                    }
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('DevOps-Project-06') {
                    sh """
                        docker build -t ${IMAGE_NAME}:${BUILD_NUMBER} .
                        docker tag ${IMAGE_NAME}:${BUILD_NUMBER} ${IMAGE_NAME}:latest
                    """
                }
            }
        }

        stage('Push Docker Image to JFrog') {
            steps {
                script {
                    def server = Artifactory.server("${ARTIFACTORY_SERVER}")

                    def rtDockerPush = Artifactory.docker server: server
                    rtDockerPush.push("${IMAGE_NAME}:${BUILD_NUMBER}", "${DOCKER_REPO}")
                    rtDockerPush.push("${IMAGE_NAME}:latest", "${DOCKER_REPO}")
                }
            }
        }

        stage('Deploy Container') {
            steps {
                sh """
                    docker stop ${CONTAINER_NAME} || true
                    docker rm ${CONTAINER_NAME} || true
                    docker run -d -p 8080:8080 --name ${CONTAINER_NAME} ${IMAGE_NAME}:latest
                """
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline completed successfully!"
        }
        failure {
            echo "❌ Pipeline failed!"
        }
    }
}
