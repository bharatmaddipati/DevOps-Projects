pipeline {
    agent { label 'agent1' }

    environment {
        IMAGE_NAME = "bharatm99/devops6-app"
        CONTAINER_NAME = "devops6-app"
        JFROG_URL = "https://trialzb4886.jfrog.io"
        JFROG_DOCKER_REPO = "docker-trial"
    }

    options {
        timestamps()
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & SonarQube Analysis') {
            steps {
                dir('DevOps-Project-06') {
                    withSonarQubeEnv('SonarQube') {
                        withCredentials([string(credentialsId: 'SONAR_AUTH_TOKEN', variable: 'SONAR_TOKEN')]) {
                            sh '''
                                mvn clean package -DskipTests \
                                sonar:sonar \
                                -Dsonar.projectKey=devops6-app \
                                -Dsonar.login=$SONAR_TOKEN
                            '''
                        }
                    }
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('DevOps-Project-06') {
                    sh '''
                        docker build -t ${IMAGE_NAME}:${BUILD_NUMBER} .
                        docker tag ${IMAGE_NAME}:${BUILD_NUMBER} ${IMAGE_NAME}:latest
                    '''
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                retry(2) {
                    withCredentials([usernamePassword(
                        credentialsId: 'dockerhub-creds',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )]) {

                        sh '''
                            echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                            docker push ${IMAGE_NAME}:${BUILD_NUMBER}
                            docker push ${IMAGE_NAME}:latest
                        '''
                    }
                }
            }
        }

        stage('Push to JFrog Artifactory') {
            steps {
                withCredentials([string(credentialsId: 'jfrog-token', variable: 'JF_TOKEN')]) {
                    sh '''
                        # Configure JFrog CLI
                        jf config add my-server \
                          --url=$JFROG_URL \
                          --access-token=$JF_TOKEN \
                          --interactive=false || true

                        # Login Docker to JFrog
                        echo $JF_TOKEN | docker login trialzb4886.jfrog.io \
                          --username=admin \
                          --password-stdin

                        # Tag image for JFrog
                        docker tag ${IMAGE_NAME}:${BUILD_NUMBER} \
                          trialzb4886.jfrog.io/${JFROG_DOCKER_REPO}/devops6-app:${BUILD_NUMBER}

                        docker tag ${IMAGE_NAME}:latest \
                          trialzb4886.jfrog.io/${JFROG_DOCKER_REPO}/devops6-app:latest

                        # Push to JFrog
                        docker push trialzb4886.jfrog.io/${JFROG_DOCKER_REPO}/devops6-app:${BUILD_NUMBER}
                        docker push trialzb4886.jfrog.io/${JFROG_DOCKER_REPO}/devops6-app:latest
                    '''
                }
            }
        }

        stage('Deploy Container') {
            steps {
                sh '''
                    docker stop ${CONTAINER_NAME} || true
                    docker rm ${CONTAINER_NAME} || true
                    docker run -d -p 8000:8000 \
                      --name ${CONTAINER_NAME} \
                      ${IMAGE_NAME}:latest
                '''
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline completed successfully!"
        }
        failure {
            echo "❌ Pipeline failed!"
        }
    }
}
