pipeline {
    agent { label 'maven' }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                dir('DevOps-Project-06') {
                    echo 'Build started'
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Deploy Jar') {
            steps {
                dir('DevOps-Project-06') {
                    sh 'mvn deploy -DskipTests'
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('DevOps-Project-06') {
                    echo 'Docker build started'
                    sh 'docker build -t demo-workshop:latest .'
                }
            }
        }
    }
}
